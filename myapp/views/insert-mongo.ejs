<% include head %>

    <script src="/javascripts/insert-mongo.js"></script>

    <div ng-app="myapp">
        <div ng-controller="MongoController">
            <h3>Books</h3>
            ISBN: <input type="text" ng-model="book.isbn"><br> Name: <input type="text" ng-model="book.name">
            <br>
            <button type="button" ng-click="save()">Save</button>

            <table class="table">
                <tbody>
                    <tr ng-repeat="b in books">
                        <td>{{b.isbn}}</td>
                        <td>{{b.name}}</td>
                        <td>{{b.user_name}}</td>
                        <td>
                            <button ng-click="edit(b)">Edit</button>
                            <button ng-click="del(b)">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>

    </div>
    <% include footer %>