<div ng-app="myApp">
    <div ng-controller="MyController">
        <div>{{ x }}</div>
        <button ng-click="changeX()">Click Here</button>
        <button ng-click="loadData()">Show book list</button>
        <button type="button" ng-click="book = {}" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addBook">
            Add book
        </button> Search: <input type="text" ng-model="search">


        <table>
            <thead>
                <td>#</td>
                <td>isbn</td>
                <td>name</td>
                <td>price</td>
                <td>qty</td>
                <td></td>
                <tr>
                    <td></td>
                    <td><input type="text" ng-model="search2.isbn"></td>
                    <td><input type="text" ng-model="search2.name"></td>
                    <td><input type="text" ng-model="search2.price"></td>
                    <td><input type="text" ng-model="search2.qty"></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="b in books | filter: search2">
                    <td>{{ $index + 1 }}</td>
                    <td>{{ b.isbn }}</td>
                    <td>{{ b.name }}</td>
                    <td>{{ b.price }}</td>
                    <td>{{ b.qty }}</td>
                    <td>
                        <button type="button" ng-click="edit(b)" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addBook">
                            Edit
                        </button>
                        <button type="button" ng-click="del(b)" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#myModal">
                            Delete
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>

        <div id="addBook" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Add an book</h4>
                    </div>
                    <div class="modal-body">
                        <p>
                            <label>ISBN</label>
                            <input class="form-control" ng-model="book.isbn">
                        </p>
                        <p>
                            <label>Name</label>
                            <input class="form-control" ng-model="book.name">
                        </p>
                        <p>
                            <label>Price</label>
                            <input class="form-control" ng-model="book.price">
                        </p>
                        <p>
                            <label>Qty</label>
                            <input class="form-control" ng-model="book.qty">
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" ng-click="save()" class="btn btn-default" data-dismiss="modal">Save</button>
                        <button type="button" ng-click="cancelSave()" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>



    </div>

</div>